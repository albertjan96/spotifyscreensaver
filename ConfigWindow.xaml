<Window x:Class="SpotifyScreenSaver.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spotify Screensaver - Config" Height="400" Width="560"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="18" FontWeight="SemiBold" Text="Spotify Now Playing Screensaver"/>
        
        <StackPanel Grid.Row="1" Margin="0,12,0,0">
            <TextBlock FontWeight="SemiBold" Text="Spotify Client ID"/>
            <TextBlock Margin="0,4,0,4" TextWrapping="Wrap" Opacity="0.8" FontSize="11"
                       Text="Get your Client ID from https://developer.spotify.com/dashboard (create an app with redirect URI: http://127.0.0.1:5543/callback)"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="ClientIdBox" Height="28" VerticalContentAlignment="Center"/>
                <Button x:Name="SaveClientIdBtn" Grid.Column="1" Width="80" Height="28" Margin="8,0,0,0" Click="SaveClientId_Click">Save</Button>
            </Grid>
        </StackPanel>
        
        <TextBlock Grid.Row="2" Margin="0,16,0,12" TextWrapping="Wrap"
                   Text="After saving Client ID: 1) Click Login. 2) Login via your browser. 3) Close this window. Then /s fullscreen works."/>

        <StackPanel Grid.Row="3" Orientation="Vertical" VerticalAlignment="Top" >
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button x:Name="LoginBtn" Width="140" Height="34" Margin="0,0,10,0" Click="Login_Click">Login with Spotify</Button>
                <Button x:Name="TestBtn" Width="140" Height="34" Click="Test_Click">Test Now Playing</Button>
                <Button x:Name="ClearBtn" Width="140" Height="34" Margin="10,0,0,0" Click="Clear_Click">Logout / Clear</Button>
            </StackPanel>

            <TextBlock FontWeight="SemiBold" Text="Status"/>
            <TextBox x:Name="StatusBox" Height="140" Margin="0,6,0,0" IsReadOnly="True" TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <TextBlock Grid.Row="4" Margin="0,12,0,0" Opacity="0.8" TextWrapping="Wrap"
                   Text="Tip: Spotify must be playing somewhere (PC/phone/speaker). If you hear nothing: API often returns 204 No Content."/>
    </Grid>
</Window>