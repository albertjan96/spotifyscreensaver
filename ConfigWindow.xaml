<Window x:Class="SpotifyScreenSaver.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spotify Screensaver - Config" Height="320" Width="560"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="18" FontWeight="SemiBold" Text="Spotify Now Playing Screensaver"/>
        <TextBlock Grid.Row="1" Margin="0,8,0,12" TextWrapping="Wrap"
                   Text="1) Click Login. 2) Login via your browser. 3) Close this window. Then /s fullscreen works."/>

        <StackPanel Grid.Row="2" Orientation="Vertical" VerticalAlignment="Top" >
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button x:Name="LoginBtn" Width="140" Height="34" Margin="0,0,10,0" Click="Login_Click">Login with Spotify</Button>
                <Button x:Name="TestBtn" Width="140" Height="34" Click="Test_Click">Test Now Playing</Button>
                <Button x:Name="ClearBtn" Width="140" Height="34" Margin="10,0,0,0" Click="Clear_Click">Logout / Clear</Button>
            </StackPanel>

            <TextBlock FontWeight="SemiBold" Text="Status"/>
            <TextBox x:Name="StatusBox" Height="140" Margin="0,6,0,0" IsReadOnly="True" TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <TextBlock Grid.Row="3" Margin="0,12,0,0" Opacity="0.8" TextWrapping="Wrap"
                   Text="Tip: Spotify must be playing somewhere (PC/phone/speaker). If you hear nothing: API often returns 204 No Content."/>
    </Grid>
</Window>