<Window x:Class="SpotifyScreenSaver.ScreenSaverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Black"
        Cursor="None"
        Topmost="True"
        ShowInTaskbar="False">

	<Grid>
		<!-- Spotify Logo in top right corner -->
		<Image Source="/Resources/spotify-logo.png"
		       Width="120" 
		       Height="120"
		       HorizontalAlignment="Right" 
		       VerticalAlignment="Top"
		       Margin="0,40,40,0"
		       Opacity="0.7"/>

		<!-- Main content -->
		<Grid Margin="60">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="60"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Border CornerRadius="26"
					ClipToBounds="True"
					Width="520"
					Height="520">
				<Image x:Name="AlbumArt"
					   Stretch="UniformToFill"/>
			</Border>

			<StackPanel Grid.Column="2"
						VerticalAlignment="Center">

				<TextBlock x:Name="SongText"
						   FontSize="64"
						   FontWeight="Bold"
						   Foreground="White"
						   TextWrapping="Wrap"
						   MaxWidth="1100"/>

				<TextBlock x:Name="ArtistText"
						   Margin="0,18,0,0"
						   FontSize="36"
						   Foreground="White"
						   Opacity="0.9"
						   TextWrapping="Wrap"
						   MaxWidth="1100"/>

				<TextBlock x:Name="TimeText"
						   Margin="0,12,0,0"
						   FontSize="24"
						   Foreground="White"
						   Opacity="0.7"
						   MaxWidth="1100"/>

				<StackPanel x:Name="NextTrackPanel"
							Margin="0,30,0,0"
							Visibility="Collapsed">
					<TextBlock Text="Volgende:"
							   FontSize="20"
							   Foreground="White"
							   Opacity="0.6"/>
					<TextBlock x:Name="NextSongText"
							   Margin="0,6,0,0"
							   FontSize="28"
							   FontWeight="SemiBold"
							   Foreground="White"
							   Opacity="0.85"
							   TextWrapping="Wrap"
							   MaxWidth="1100"/>
					<TextBlock x:Name="NextArtistText"
							   Margin="0,4,0,0"
							   FontSize="22"
							   Foreground="White"
							   Opacity="0.75"
							   TextWrapping="Wrap"
							   MaxWidth="1100"/>
				</StackPanel>

			</StackPanel>
		</Grid>
	</Grid>
</Window>
